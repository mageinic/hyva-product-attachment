<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="MageINIC\ProductAttachment\Block\CustomTab"
                   name="product.info.attach"
                   template="Hyva_MageINICProductAttachment::product/view/productattachment.phtml"
                   group="detailed_info" ifconfig="productattachment/general/enable">
                <arguments>
                    <argument name="title" xsi:type="helper"
                              helper="MageINIC\ProductAttachment\Helper\Data::getTabName">
                    </argument>
                    <argument name="sort_order" xsi:type="string">100</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="product.info.details.after.wrapper.main">
            <block class="MageINIC\ProductAttachment\Block\CustomTab"
                   name="product.info.attachment"
                   template="Hyva_MageINICProductAttachment::product/view/productattachment.phtml"
                   group="detailed_info" ifconfig="productattachment/general/enable"
                   before="product.reviews.wrapper">
                <arguments>
                    <argument name="title" xsi:type="helper"
                              helper="MageINIC\ProductAttachment\Helper\Data::getTabName">
                    </argument>
                    <argument name="sort_order" xsi:type="string">100</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
